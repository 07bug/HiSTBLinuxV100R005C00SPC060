LOCAL_PATH := $(my-dir)

include $(CLEAR_VARS)

LOCAL_MODULE := pkg_iconv

EXT_TYPE_GZ := tar.gz
#EXT_TYPE_XZ := tar.xz
PKG_ICONV_NAME := libiconv-1.14


LOCAL_INTERMEDIATE_TARGETS := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE) \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_prepare \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_configure \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_make \
	$(LOCAL_MODULE)-clean

PRIVATE_PKG_ICONV_NAME_PREPARE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_prepare
PRIVATE_PKG_ICONV_NAME_CONFIGURE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_configure
PRIVATE_PKG_ICONV_NAME_MAKE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_make
PRIVATE_PKG_ICONV_NAME_INSTALL := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)_install

$(LOCAL_MODULE)-deps:$(LOCAL_MODULE)
$(LOCAL_MODULE):$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE)

$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/.$(LOCAL_MODULE):$(PRIVATE_PKG_ICONV_NAME_INSTALL)

$(PRIVATE_PKG_ICONV_NAME_INSTALL):$(PRIVATE_PKG_ICONV_NAME_MAKE)
	$(NS)echo "begin INSTALL $(PKG_ICONV_NAME)!"
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libiconv.so $(TARGET_OUT_LIB_DIR)/libiconv.so
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libiconv.so.2 $(TARGET_OUT_LIB_DIR)/libiconv.so.2
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libiconv.so.2.5.1 $(TARGET_OUT_LIB_DIR)/libiconv.so.2.5.1
ifeq ($(STRIP_IN_RELEASE_VERSION), y)
	$(TARGET_STRIP) $(TARGET_OUT_LIB_DIR)/libiconv.so.2.5.1
endif
	$(NS)echo "end INSTALL $(PKG_ICONV_NAME)!"

$(PRIVATE_PKG_ICONV_NAME_MAKE):$(PRIVATE_PKG_ICONV_NAME_CONFIGURE)
	$(NS)echo "begin make $(PKG_ICONV_NAME)!"
	make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME) $(MAKE_PARALLEL)
	make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME) install $(MAKE_PARALLEL)
	$(NS)echo "end make $(PKG_ICONV_NAME)!"

$(PRIVATE_PKG_ICONV_NAME_CONFIGURE):$(PRIVATE_PKG_ICONV_NAME_PREPARE)
	$(NS)echo "begin configure $(PKG_ICONV_NAME)..."
	chmod 777 $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)/configure
	cd $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME); gl_cv_header_working_stdint_h=yes ac_cv_path_install="/usr/bin/install -cp" ./configure --prefix="${THIRDPARTY_OBJ_DIR}" \
		--host=$(CFG_HOST_TYPE) \
		CFLAGS="$(OPENSOURCE_CFLAGS) --sysroot=$(CFG_COMPILE_SYSROOT)" \
		CPPFLAGS="$(OPENSOURCE_CXXFLAGS)" \
		LDFLAGS="$(OPENSOURCE_LDFLAGS) -lc" \
		--disable-static --enable-shared \
		CXX=$(TARGET_CXX) CC=$(TARGET_CC)
	$(NS)touch $@
	$(NS)echo "end configure $(PKG_ICONV_NAME)..."

$(PRIVATE_PKG_ICONV_NAME_PREPARE):
	$(NS)echo "begin prepare $(PKG_ICONV_NAME)..."
	$(NC)rm -rf $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)
	$(NC) mkdir -p $(SME_THIRDPARTY_MERGE_DIR)
	tar -xf $(SME_THIRDPARTY_ORG_DIR)/../../../../../../third_party/open_source/$(PKG_ICONV_NAME).$(EXT_TYPE_GZ) -C $(SME_THIRDPARTY_MERGE_DIR)
	cp -af $(SME_THIRDPARTY_PATCH_DIR)/$(PKG_ICONV_NAME) $(SME_THIRDPARTY_MERGE_DIR)/
	$(NS)touch $@
	$(NS)echo "end prepare $(PKG_ICONV_NAME)!"

$(LOCAL_MODULE)-clean:
	$(NS)echo "begin make clean $(PKG_ICONV_NAME) ..."
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libiconv.so
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libiconv.so.2
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libiconv.so.2.5.1
	$(NC)make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME) uninstall $(MAKE_PARALLEL)
	$(NC)make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME) clean $(MAKE_PARALLEL)
	$(NS)echo "end make clean $(PKG_ICONV_NAME)"

$(LOCAL_MODULE)-cfg-clean:
	$(NS)echo "begin make clean $(PKG_ICONV_NAME)-cfg ..."
	$(NC)rm -rf $(PRIVATE_PKG_ICONV_NAME_CONFIGURE)
	$(NS)echo "end make clean $(PKG_ICONV_NAME)-cfg ..."

$(LOCAL_MODULE)-prepare-clean:$(LOCAL_MODULE)-clean
	$(NS)echo "begin make clean $(PKG_ICONV_NAME)-prepare ..."
	$(NC)rm -rf $(PRIVATE_PKG_ICONV_NAME_CONFIGURE)
	$(NC)rm -rf $(PRIVATE_PKG_ICONV_NAME_PREPARE)
	$(NC)rm -rf $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_ICONV_NAME)
	$(NS)echo "end make clean $(PKG_ICONV_NAME)-prepare ..."

include $(BUILD_OPENSOURCE_PKG)
