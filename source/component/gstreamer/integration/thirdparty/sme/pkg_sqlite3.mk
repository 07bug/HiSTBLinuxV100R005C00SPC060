LOCAL_PATH := $(my-dir)

include $(CLEAR_VARS)

LOCAL_MODULE := pkg_sqlite3

EXT_TYPE_GZ := tar.gz
#EXT_TYPE_XZ := tar.xz
PKG_SQLITE3_NAME := sqlite-autoconf-3180000


LOCAL_INTERMEDIATE_TARGETS := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE) \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_prepare \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_configure \
	$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_make \
	$(LOCAL_MODULE)-clean

PRIVATEPKG_SQLITE3_NAMEPREPARE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_prepare
PRIVATEPKG_SQLITE3_NAMECONFIGURE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_configure
PRIVATEPKG_SQLITE3_NAMEMAKE := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_make
PRIVATEPKG_SQLITE3_NAMEINSTALL := $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)_install
ifeq ($(ENV_SME_VERSION_TYPE), rls)
$(PRIVATEPKG_SQLITE3_NAMECONFIGURE): PRIVATE_PKG_SQLITE3_DBG_FLG := --disable-debug
else
$(PRIVATEPKG_SQLITE3_NAMECONFIGURE): PRIVATE_PKG_SQLITE3_DBG_FLG := --enable-debug
endif

$(LOCAL_MODULE)-deps:$(LOCAL_MODULE)
$(LOCAL_MODULE):$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE)

$(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/.$(LOCAL_MODULE):$(PRIVATEPKG_SQLITE3_NAMEINSTALL)

$(PRIVATEPKG_SQLITE3_NAMEINSTALL):$(PRIVATEPKG_SQLITE3_NAMEMAKE)
	$(NS)echo "begin INSTALL $(PKG_SQLITE3_NAME)!"
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libsqlite3.so $(TARGET_OUT_LIB_DIR)/libsqlite3.so
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libsqlite3.so.0 $(TARGET_OUT_LIB_DIR)/libsqlite3.so.0
	cp -af $(THIRDPARTY_OBJ_DIR)/lib/libsqlite3.so.0.8.6 $(TARGET_OUT_LIB_DIR)/libsqlite3.so.0.8.6
ifeq ($(STRIP_IN_RELEASE_VERSION), y)
	$(TARGET_STRIP) $(TARGET_OUT_LIB_DIR)/libsqlite3.so.0.8.6
endif
	$(NS)echo "end INSTALL $(PKG_SQLITE3_NAME)!"

$(PRIVATEPKG_SQLITE3_NAMEMAKE):$(PRIVATEPKG_SQLITE3_NAMECONFIGURE)
	$(NS)echo "begin make $(PKG_SQLITE3_NAME)!"
	make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME) $(MAKE_PARALLEL)
	make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME) install $(MAKE_PARALLEL)
	$(NS)echo "end make $(PKG_SQLITE3_NAME)!"

$(PRIVATEPKG_SQLITE3_NAMECONFIGURE):$(PRIVATEPKG_SQLITE3_NAMEPREPARE)
	$(NS)echo "begin configure $(PKG_SQLITE3_NAME)..."
	chmod 777 $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)/configure
	cd $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME);ac_cv_path_install="/usr/bin/install -cp" ./configure --prefix="${THIRDPARTY_OBJ_DIR}" \
		--host=$(CFG_HOST_TYPE) \
		CFLAGS="-DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_COLUMN_METADATA=1 -DSQLITE_ENABLE_UNLOCK_NOTIFY=1 -DSQLITE_SECURE_DELETE=1 $(OPENSOURCE_CFLAGS) --sysroot=$(CFG_COMPILE_SYSROOT)" \
		CPPFLAGS="$(OPENSOURCE_CXXFLAGS)" \
		LDFLAGS="$(OPENSOURCE_LDFLAGS)" \
		--disable-static --enable-shared $(PRIVATE_PKG_SQLITE3_DBG_FLG) \
		CXX=$(TARGET_CXX) CC=$(TARGET_CC)
	-$(NS)cd $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME);sed -i 's//usr/bin/install -c//usr/bin/install -cp/g' `grep '/usr/bin/install -c' -rl Makefile`
	$(NS)touch $@
	$(NS)echo "end configure $(PKG_SQLITE3_NAME)..."

$(PRIVATEPKG_SQLITE3_NAMEPREPARE):
	$(NS)echo "begin prepare $(PKG_SQLITE3_NAME)..."
	$(NC)rm -rf $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)
	$(NC)mkdir -p $(SME_THIRDPARTY_MERGE_DIR)
	tar -xf $(SME_THIRDPARTY_ORG_DIR)/../../../../../../third_party/open_source/$(PKG_SQLITE3_NAME).$(EXT_TYPE_GZ) -C $(SME_THIRDPARTY_MERGE_DIR)
	$(NC)cp -af $(SME_THIRDPARTY_PATCH_DIR)/$(PKG_SQLITE3_NAME) $(SME_THIRDPARTY_MERGE_DIR)/
	$(NS)touch $@
	$(NS)echo "end prepare $(PKG_SQLITE3_NAME)!"

$(LOCAL_MODULE)-clean:
	$(NS)echo "begin make clean $(PKG_SQLITE3_NAME) ..."
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libsqlite3.so
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libsqlite3.so.0
	$(NC)rm -rf $(TARGET_OUT_LIB_DIR)/libsqlite3.so.0.8.6
	$(NC)make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME) uninstall $(MAKE_PARALLEL)
	$(NC)make -C $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME) clean $(MAKE_PARALLEL)
	$(NS)echo "end make clean $(PKG_SQLITE3_NAME)"

$(LOCAL_MODULE)-cfg-clean:
	$(NS)echo "begin make clean $(PKG_SQLITE3_NAME)-cfg ..."
	$(NC)rm -rf $(PRIVATEPKG_SQLITE3_NAMECONFIGURE)
	$(NS)echo "end make clean $(PKG_SQLITE3_NAME)-cfg ..."

$(LOCAL_MODULE)-prepare-clean:$(LOCAL_MODULE)-clean
	$(NS)echo "begin make clean $(PKG_SQLITE3_NAME)-prepare ..."
	$(NC)rm -rf $(PRIVATEPKG_SQLITE3_NAMECONFIGURE)
	$(NC)rm -rf $(PRIVATEPKG_SQLITE3_NAMEPREPARE)
	$(NC)rm -rf $(SME_THIRDPARTY_MERGE_DIR)/$(PKG_SQLITE3_NAME)
	$(NS)echo "end make clean $(PKG_SQLITE3_NAME)-prepare ..."

include $(BUILD_OPENSOURCE_PKG)
