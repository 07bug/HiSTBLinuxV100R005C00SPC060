################################################################################
# parameter
PREFIX         ?= $(shell pwd)

################################################################################
#
#  options below should be redefined here, don't use definitions in Makefile
#  in SDK top dir.
#
CC=gcc -m32 -static
OBJDUMP=objdump
HOST=
CPP=
LD=
NM=

################################################################################

TARGET          = mkbootargs
################################################################################

all:
	@mkdir -p $(PREFIX)
	$(CC) -o $(PREFIX)/$(TARGET) crc32.c mkbootargs.c


################################################################################

clean:
	@rm $(PREFIX)/$(TARGET) -rvf
	@rm $(PREFIX)/*.bin -rvf

distclean: clean

################################################################################
.PHONY: clean distclean all
################################################################################
