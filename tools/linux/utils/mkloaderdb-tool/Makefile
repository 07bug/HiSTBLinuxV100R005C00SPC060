################################################################################
#    x86/src/mkloaderdb
#    Create By
#    2015.01.31
################################################################################
# parameter
PREFIX         ?= $(shell pwd)

################################################################################
#
#  options below should be redefined here, don't use definitions in Makefile
#  in SDK top dir.
#
CC=gcc
OBJDUMP=objdump
HOST=
CPP=
LD=
NM=

################################################################################
STRIP          := strip

SRC = mkloaderdb.c
TARGET := $(patsubst %.c,%,$(wildcard *.c))

################################################################################
all:
	@mkdir -p $(PREFIX)
	$(CC) -o $(PREFIX)/$(TARGET) $(SRC) -lz

################################################################################

clean:
	@-rm $(PREFIX)/$(TARGET) -rvf
	@-rm $(PREFIX)/*.bin -rvf

distclean: clean

################################################################################
.PHONY: clean distclean all
################################################################################
